{
  "name": "@borshch/components",
  "version": "0.3.1",
  "description": "Tools for vanilla webcomponents",
  "author": "trofima",
  "license": "ISC",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    "import": "./dist/borshch-components.js",
    "require": "./dist/borshch-components.cjs"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trofima/borshch.git"
  },
  "keywords": [
    "borshch",
    "borscht",
    "webcomponents"
  ],
  "homepage": "https://github.com/trofima/borshch/packages/components#readme",
  "scripts": {
    "start": "node playground/server.js",
    "prepublishOnly": "build",
    "prebuild": "rm -rf dist/*",
    "build": "rollup -c",
    "test": "mocha -u tdd --timeout 10000 --colors './src/**/*.test.js'",
    "lint": "eslint --fix",
    "lint-staged": "lint-staged"
  },
  "pre-commit": [
    "lint"
  ],
  "pre-push": [
    "test"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "chai": "^5.1.2",
    "chai-spies": "^1.0.0",
    "chalk": "^5.4.1",
    "ejs": "^3.1.10",
    "eslint": "^9.17.0",
    "express": "^4.21.2",
    "globals": "^15.14.0",
    "lint-staged": "^15.2.11",
    "mocha": "^11.0.1",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.4",
    "rollup": "^4.29.1",
    "rollup-plugin-ejs": "^4.0.1"
  },
  "dependencies": {
    "@borshch/utilities": "^2.0.0"
  }
