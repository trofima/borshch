{
  "name": "borshch",
  "version": "0.1.0",
  "description": "Tools for vanilla webcomponents",
  "type": "module",
  "main": "index.js",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    "import": "./dist/borshch.js",
    "require": "./dist/borshch.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trofima/borshch.git"
  },
  "keywords": [
    "borshch",
    "webcomponents"
  ],
  "author": "trofima",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trofima/borshch/issues"
  },
  "homepage": "https://github.com/trofima/borshch#readme",
  "scripts": {
    "start": "node playground/server.js",
    "test": "node --experimental-specifier-resolution=node ./node_modules/.bin/mocha -u tdd --timeout 10000 --colors ./**/*.test.js",
    "prebuild": "rm -rf dist/*",
    "build": "rollup -c",
    "lint": "eslint {src,playground}/**/*.js"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-terser": "^0.3.0",
    "chai": "^4.3.6",
    "chai-spies": "^1.0.0",
    "chalk": "^5.2.0",
    "ejs": "^3.1.8",
    "eslint": "^8.17.0",
    "express": "^4.18.1",
    "mocha": "^10.0.0",
    "rollup": "^3.9.1",
    "rollup-plugin-ejs": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es2022": true
    },
    "ignorePatterns": [
      "playground/dist/**/*"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 13
    },
    "rules": {
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "never"
      ],
      "no-trailing-spaces": [
        "warn"
      ],
      "no-unused-vars": [
        "warn"
      ]
    }
  }
}
